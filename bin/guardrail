#!/usr/bin/env php
<?php

declare(strict_types=1);

// Find autoloader
$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',           // When installed as a dependency
    __DIR__ . '/../../../autoload.php',            // When in vendor/bin
    __DIR__ . '/../../../../vendor/autoload.php',  // Development
];

$autoloaderFound = false;
foreach ($autoloadPaths as $autoloadPath) {
    if (file_exists($autoloadPath)) {
        require $autoloadPath;
        $autoloaderFound = true;
        break;
    }
}

if (!$autoloaderFound) {
    fwrite(STDERR, "Error: Could not find Composer autoloader.\n");
    fwrite(STDERR, "Please run 'composer install' first.\n");
    exit(1);
}

use Guardrail\Command\CheckCommand;
use Symfony\Component\Console\Application;

$application = new Application('Guardrail', '0.1.0');
$application->add(new CheckCommand());
$application->setDefaultCommand('check', true);
$application->run();
