{
    "name": "fuwasegu/guardrail",
    "description": "Laravel static analysis tool - Verify API routes call required methods (authorization, logging, etc.)",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "static-analysis",
        "call-graph",
        "authorization",
        "security",
        "api",
        "routes"
    ],
    "authors": [
        {
            "name": "fuwasegu"
        }
    ],
    "require": {
        "php": "^8.2",
        "nikic/php-parser": "^5.0",
        "symfony/console": "^6.0|^7.0",
        "symfony/finder": "^6.0|^7.0"
    },
    "require-dev": {
        "carthage-software/mago": "^1.0",
        "phpunit/phpunit": "^10.0|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Guardrail\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Guardrail\\Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/guardrail"
    ],
    "scripts": {
        "test": "phpunit",
        "lint": "mago lint",
        "lint:fix": "mago lint --fix",
        "format": "mago format",
        "analyze": "mago analyze",
        "cs": ["@format", "@lint"]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "carthage-software/mago": true
        }
    },
    "minimum-stability": "stable"
}
